#!/bin/bash

set -e

ROOT_DIR=$(dirname $(dirname $0))

cp README.md "$ROOT_DIR/dist/core"
cp README.md "$ROOT_DIR/dist/preact"
cp README.md "$ROOT_DIR/dist/react"

cp "$ROOT_DIR/src/core/package.json" "$ROOT_DIR/dist/core"
cp "$ROOT_DIR/src/preact/package.json" "$ROOT_DIR/dist/preact"
cp "$ROOT_DIR/src/react/package.json" "$ROOT_DIR/dist/react"
