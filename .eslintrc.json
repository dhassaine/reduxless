{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "semi": ["error", "always"],
    "no-global-assign": ["error"],
    "no-console": ["warn"],
    "max-len": [
      "warn",
      { "code": 100, "ignoreStrings": true, "ignoreTemplateLiterals": true }
    ]
  }
}
