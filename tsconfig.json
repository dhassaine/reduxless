{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "typeAcquisition": {
    "enable": true
  }
}
